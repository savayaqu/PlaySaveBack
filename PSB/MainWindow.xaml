<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PSB.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PSB"
    xmlns:vm="using:PSB.ViewModels"
    xmlns:rescol="using:PSB.Api.Response"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="PSB">
    <NavigationView
            x:Name="NavView"
            IsBackEnabled="True"
            AlwaysShowHeader="True"
            PaneDisplayMode="Left"
            SelectionFollowsFocus="Disabled"
            IsTabStop="False"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            IsTitleBarAutoPaddingEnabled="False"
            IsPaneToggleButtonVisible="False"
            IsPaneOpen="True"
        Background="{StaticResource AcrylicBackgroundFillColorBaseBrush}">

        <!-- Заголовок с кнопкой "Назад" -->
        <NavigationView.Header >
            <Grid ColumnDefinitions="50, Auto" VerticalAlignment="Center" ColumnSpacing="10" Margin="-35,-46,0,0">
                <Button x:Name="BackButton" 
                     Content="&#xE72B;" 
                     FontFamily="Segoe MDL2 Assets" 
                     FontSize="16"
                     Click="BackButton_Click"
                     Grid.Column="0"/>
                <TextBlock x:Name="HeaderText" 
                     Text="HomePage" 
                     VerticalAlignment="Center" 
                     Style="{StaticResource SubtitleTextBlockStyle}"
                     Grid.Column="1"/>
            </Grid>
        </NavigationView.Header>
        <NavigationView.MenuItems>
            <NavigationViewItem Margin="0, 10, 0, 10" Height="100" x:Name="AuthNav">
                <NavigationViewItem.Content>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12" Padding="36,0,0,0">
                        <StackPanel.Background>
                            <ImageBrush ImageSource="{x:Bind ProfileViewModel.User.Header, Mode=TwoWay}"/>
                        </StackPanel.Background>
                        <Image Stretch="Fill" Height="50" Width="50" Source="{x:Bind ProfileViewModel.User.Avatar, Mode=TwoWay}"/>
                        <TextBlock Text="{x:Bind ProfileViewModel.User.Nickname}" FontWeight="SemiBold" FontSize="28" VerticalAlignment="Center"/>
                    </StackPanel>
                </NavigationViewItem.Content>
            </NavigationViewItem>


            <NavigationViewItem Content="Главная" Tag="HomePage" Icon="Home" IsSelected="True"/>
            <NavigationViewItem Content="Сохранения" Tag="SavePage" Icon="Save">
                <NavigationViewItem.InfoBadge>
                    <InfoBadge Value="{x:Bind SaveManager.UnsyncedSavesCount, Mode=OneWay}"/>
                </NavigationViewItem.InfoBadge>
            </NavigationViewItem>
            <NavigationViewItem Content="Каталог" Tag="CatalogPage">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xF0E2;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Настройки" Tag="SettingsPage" Icon="Setting"/>
        </NavigationView.MenuItems>
        <Frame x:Name="ContentFrame" />
    </NavigationView>
</Window>