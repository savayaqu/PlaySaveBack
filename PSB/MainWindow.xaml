<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PSB.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PSB"
    xmlns:vm="using:PSB.ViewModels"
    xmlns:rescol="using:PSB.Api.Response"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="PSB">
        <NavigationView
            x:Name="nvSample"
            IsBackEnabled="True"
            AlwaysShowHeader="True"
            PaneTitle="Menu"
            PaneDisplayMode="Left"
            SelectionFollowsFocus="Disabled"
            IsTabStop="False"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            SelectionChanged="NavigationView_SelectionChanged">

            <!-- Заголовок с кнопкой "Назад" -->
            <NavigationView.Header>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BackButton" 
                            Content="&#xE72B;" 
                            FontFamily="Segoe MDL2 Assets" 
                            FontSize="16"
                            Margin="0,0,10,0"
                            Click="BackButton_Click"/>
                <TextBlock x:Name="HeaderText" 
                   Text="HomePage" 
                   VerticalAlignment="Center" 
                   FontSize="16"/>
            </StackPanel>
            </NavigationView.Header>

        <NavigationView.MenuItems>
            <NavigationViewItem x:Name="AuthNav" Height="100">
                <NavigationViewItem.Content>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12" Height="100">
                        <StackPanel.Background>
                            <ImageBrush ImageSource="{x:Bind ProfileViewModel.User.Header, Mode=OneWay}"/>
                        </StackPanel.Background>
                        <Image Stretch="Fill" Height="35" Width="35" Source="{x:Bind ProfileViewModel.User.Avatar, Mode=OneWay}"/>
                        <TextBlock Text="{x:Bind ProfileViewModel.User.Nickname, Mode=OneWay}" FontWeight="SemiBold" FontSize="28" VerticalAlignment="Center"/>
                    </StackPanel>
                </NavigationViewItem.Content>
            </NavigationViewItem>


            <NavigationViewItem Content="Home Page" Tag="HomePage" Icon="Home" IsSelected="True"/>
                <NavigationViewItem Content="Catalog" Tag="CatalogPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xF0E2;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Settings" Tag="SettingsPage" Icon="Setting"/>
                <NavigationViewItemHeader Content="БИБЛИОТЕКА" />
                <AutoSuggestBox QueryIcon="Find"/>
            
        </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" />
        </NavigationView>
</Window>
