<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PSB.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PSB.Views"
    xmlns:vm="using:PSB.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:PSB.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Name="{x:Bind GameViewModel.Game.Name, Mode=OneWay}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <Grid>
                <!-- Картинка или название -->
                <Grid x:Name="GameContentGrid" Height="420"/>
                <!-- Блок с информацией -->
                <StackPanel VerticalAlignment="Bottom" Background="#CC000000">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Блок с последним запуском и временем игры -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" Padding="16">
                            <StackPanel>
                                <!-- Кнопка "Играть" -->
                                <Button Grid.Column="0" Padding="16,8" Command="{x:Bind GameViewModel.LaunchGameCommand, Mode=OneTime}" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE768;" FontSize="16"/>
                                        <TextBlock Text="ИГРАТЬ" FontWeight="Bold" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <TextBlock Text="СОХРАНЕНИЯ" Style="{StaticResource BodyStrongTextBlockStyle}" Foreground="Gray"/>
                                <TextBlock Foreground="White" Style="{StaticResource BodyTextBlockStyle}" Text="Синхронизированы| или нет" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <TextBlock Text="ПОСЛЕДНИЙ ЗАПУСК" Style="{StaticResource BodyStrongTextBlockStyle}" Foreground="Gray"/>
                                <TextBlock Foreground="White" Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind GameViewModel.LastPlayedText, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <TextBlock Text="ВЫ ИГРАЛИ" Style="{StaticResource BodyStrongTextBlockStyle}" Foreground="Gray"/>
                                <TextBlock Foreground="White" Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind GameViewModel.Library.TimePlayed, Mode=OneWay, Converter={StaticResource TimePlayedConverter}}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                        <!-- Иконки справа -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" Padding="24">
                            <!-- Добавить в библиотеку -->
                            <Button Content="Добавить в библиотеку" Command="{x:Bind GameViewModel.AddToLibraryCommand}" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}"/>
                            <!-- Настройки -->
                            <Button Command="{x:Bind GameViewModel.OpenGameSettingsCommand, Mode=OneTime}" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <FontIcon Glyph="&#xE713;" FontSize="16"/>
                            </Button>
                            <!-- Избранное -->
                            <Button Command="{x:Bind GameViewModel.ToggleFavoriteCommand, Mode=OneWay}" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <FontIcon Glyph="{x:Bind GameViewModel.FavoriteIcon, Mode=OneWay}" FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
            <!-- Остальной контент -->
            <InfoBar Title="{x:Bind GameViewModel.SuccessInfoBar.Title, Mode=OneWay}"
                      Message="{x:Bind GameViewModel.SuccessInfoBar.Message, Mode=OneWay}"
                      Severity="{x:Bind GameViewModel.SuccessInfoBar.Severity, Mode=OneWay}"
                      IsOpen="{x:Bind GameViewModel.SuccessInfoBar.IsOpen, Mode=OneWay}"
                      TabIndex="10"/>
            <StackPanel Margin="16,0">
                <StackPanel Orientation="Vertical" Spacing="12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Ваши сохранения" HorizontalTextAlignment="Center"/>
                        <Button>
                            <FontIcon Glyph="&#xE946;" />
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel>
                                        <TextBlock Text="Если сохранение не отображается, то нажмите кнопку "/>
                                        <Button Command="{x:Bind GameViewModel.GetMySavesCommand}">
                                            <FontIcon Glyph="&#xE777;" />
                                        </Button>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>

                    <Grid RowDefinitions="*,*">
                        <!-- Заголовки таблицы -->
                        <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" ColumnSpacing="12" Padding="8">
                            <TextBlock Text="Название" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Версия" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Размер" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Дата создания" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>

                        <!-- Список данных -->
                        <ListView Grid.Row="1" ItemsSource="{x:Bind GameViewModel.Saves, Mode=OneWay}" BorderThickness="0" Padding="0" SingleSelectionFollowsFocus="False" IsItemClickEnabled="False">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:Save">
                                    <Grid Grid.RowDefinitions="Auto,Auto" ColumnSpacing="12" Padding="8">
                                        <!-- Данные первой строки -->
                                        <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" ColumnSpacing="12">
                                            <TextBlock Text="{x:Bind FileName}" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                            <TextBlock Text="{x:Bind Version}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                            <TextBlock Text="{x:Bind Size, Converter={StaticResource BytesToSizeConverter}}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                            <TextBlock Text="{x:Bind CreatedAt}" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                        </Grid>

                                        <!-- Кнопки действий (вторая строка) -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="6">
                                            <Button Command="{x:Bind vm:GameViewModel.Instance.SyncSaveCommand}" CommandParameter="{x:Bind}" Visibility="{x:Bind IsSynced, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}">
                                                <StackPanel Orientation="Horizontal">
                                                    <FontIcon Glyph="&#xE895;" />
                                                    <TextBlock Text="Синхронизировать"/>
                                                </StackPanel>
                                            </Button>
                                            <Button Command="{x:Bind vm:GameViewModel.Instance.RestoreSaveCommand}" CommandParameter="{x:Bind}">
                                                <StackPanel Orientation="Horizontal">
                                                    <FontIcon Glyph="&#xE896;" />
                                                    <TextBlock Text="Восстановить"/>
                                                </StackPanel>
                                            </Button>
                                            <Button>
                                                <StackPanel Orientation="Horizontal">
                                                    <FontIcon Glyph="&#xE777;" />
                                                    <TextBlock Text="Перезаписать"/>
                                                </StackPanel>
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <StackPanel Spacing="6">
                                                            <TextBox PlaceholderText="Описание сохранения" Text="{x:Bind Description, Mode=TwoWay}"/>
                                                            <Button HorizontalAlignment="Center" Command="{x:Bind vm:GameViewModel.Instance.OverwriteSaveCommand}" CommandParameter="{x:Bind}" Content="Перезаписать"/>
                                                        </StackPanel>
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                            <Button Command="{x:Bind vm:GameViewModel.Instance.DeleteSaveCommand}" CommandParameter="{x:Bind}">
                                                <StackPanel Orientation="Horizontal">
                                                    <FontIcon Glyph="&#xE74D;" />
                                                    <TextBlock Text="Удалить"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>



                    <StackPanel Orientation="Vertical" Spacing="16">
                        <ProgressBar Visibility="{x:Bind GameViewModel.IsUploading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" IsIndeterminate="{x:Bind GameViewModel.IsUploading, Mode=OneWay}" Height="20" Margin="10" />
                        <Button>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE710;" />
                                <TextBlock Text="Создать"/>
                            </StackPanel>
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel Spacing="6">
                                        <TextBox PlaceholderText="Версия сохранения" Text="{x:Bind GameViewModel.SaveVersion, Mode=TwoWay}"/>
                                        <TextBox PlaceholderText="Описание сохранения" Text="{x:Bind GameViewModel.SaveDescription, Mode=TwoWay}"/>
                                        <Button HorizontalAlignment="Center" Command="{x:Bind GameViewModel.CreateSaveCommand}" Content="Создать"></Button>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                    <StackPanel>
                        <HyperlinkButton Content="Посмотреть сохранения пользователей к этой игре"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>