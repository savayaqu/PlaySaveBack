<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PSB.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PSB.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:models="using:PSB.Models" xmlns:core="using:Windows.Media.Core"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Name="{x:Bind GameViewModel.Game.Name, Mode=OneWay}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <Grid>
                <!-- Картинка -->
                <Image Height="420" Source="{x:Bind GameViewModel.Game.Header, Mode=OneWay}" Margin="0,-32,0,0" Stretch="UniformToFill"/>
                <!-- Блок с информацией -->
                <StackPanel VerticalAlignment="Bottom" Background="#CC000000">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Блок с последним запуском и временем игры -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" Padding="16">
                            <StackPanel>
                                <!-- Кнопка "Играть" -->
                                <Button Grid.Column="0" Padding="16,8" Command="{x:Bind GameViewModel.LaunchGameCommand, Mode=OneTime}" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE768;" FontSize="16"/>
                                        <TextBlock Text="ИГРАТЬ" FontWeight="Bold" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <TextBlock Text="СОХРАНЕНИЯ" Style="{StaticResource BodyStrongTextBlockStyle}" Foreground="Gray"/>
                                <TextBlock Foreground="White" Style="{StaticResource BodyTextBlockStyle}" Text="Синхронизированы| или нет" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <TextBlock Text="ПОСЛЕДНИЙ ЗАПУСК" Style="{StaticResource BodyStrongTextBlockStyle}" Foreground="Gray"/>
                                <TextBlock Foreground="White" Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind GameViewModel.LastPlayedText, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <TextBlock Text="ВЫ ИГРАЛИ" Style="{StaticResource BodyStrongTextBlockStyle}" Foreground="Gray"/>
                                <TextBlock Foreground="White" Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind GameViewModel.Library.TimePlayed, Mode=OneWay, Converter={StaticResource TimePlayedConverter}}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                        <!-- Иконки справа -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" Padding="24">
                            <!-- Добавить в библиотеку -->
                            <Button Content="Добавить в библиотеку" Command="{x:Bind GameViewModel.AddToLibraryCommand}" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}"/>
                            <!-- Настройки -->
                            <Button Command="{x:Bind GameViewModel.OpenGameSettingsCommand, Mode=OneTime}" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <FontIcon Glyph="&#xE713;" FontSize="16"/>
                            </Button>
                            <!-- Избранное -->
                            <Button Command="{x:Bind GameViewModel.ToggleFavoriteCommand, Mode=OneWay}" Visibility="{x:Bind GameViewModel.InLibrary, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                                <FontIcon Glyph="{x:Bind GameViewModel.FavoriteIcon, Mode=OneWay}" FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
            <!-- Остальной контент -->
            <InfoBar Title="{x:Bind GameViewModel.SuccessInfoBar.Title,         Mode=OneWay}"
         Message="{x:Bind GameViewModel.SuccessInfoBar.Message,     Mode=OneWay}"
         Severity="{x:Bind GameViewModel.SuccessInfoBar.Severity,   Mode=OneWay}"
         IsOpen="{x:Bind GameViewModel.SuccessInfoBar.IsOpen,       Mode=OneWay}"
         TabIndex="10"/>
            <Grid ColumnDefinitions="*, 300" RowDefinitions="Auto, Auto, Auto" RowSpacing="15" ColumnSpacing="15" Margin="16,0">
                <!-- Контент слева -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Недавние новости"/>
                </StackPanel>
                <!-- Контент справа -->
                <StackPanel Orientation="Vertical" Grid.Column="1" Spacing="12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Ваши сохранения" HorizontalTextAlignment="Center"/>
                    <Button>
                        <FontIcon Glyph="&#xE946;" />
                        <Button.Flyout>
                            <Flyout>
                                <StackPanel>
                                    <TextBlock Text="Если сохранение не отображается, то нажмите кнопку "/>
                                        <Button Command="{x:Bind GameViewModel.GetMySavesCommand}">
                                            <FontIcon Glyph="&#xE777;" />
                                        </Button>
                                    </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                    </StackPanel>
                    
                    <ListView ItemsSource="{x:Bind GameViewModel.Saves, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Save">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Line StrokeThickness="1" Stroke="White" Y1="0" Y2="20"/>
                                    <FontIcon Glyph="&#xE8B7;" />
                                    <TextBlock Text="{x:Bind FileName}"/>
                                    <Line StrokeThickness="1" Stroke="White" Y1="0" Y2="20" />
                                    <TextBlock Text="{x:Bind Version}"/>
                                    <Line StrokeThickness="1" Stroke="White" Y1="0" Y2="20"/>
                                    <TextBlock Text="{x:Bind Size}"/>
                                    <Line StrokeThickness="1" Stroke="White" Y1="0" Y2="20"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Orientation="Vertical" Spacing="16">
                        <ProgressBar Visibility="{x:Bind GameViewModel.IsUploading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" IsIndeterminate="{x:Bind GameViewModel.IsUploading, Mode=OneWay}" Height="20" Margin="10" />
                        <Button>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE710;" />
                                <TextBlock Text="Создать"/>
                            </StackPanel>
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel Spacing="6">
                                        <TextBox PlaceholderText="Описание сохранения" Text="{x:Bind GameViewModel.SaveDescription, Mode=TwoWay}"/>
                                        <TextBox PlaceholderText="Версия сохранения" Text="{x:Bind GameViewModel.SaveVersion, Mode=TwoWay}"/>
                                        <Button HorizontalAlignment="Center" Command="{x:Bind GameViewModel.UploadSaveCommand}" Content="Создать"></Button>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Текущее сохранение"/>
                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Статус: крутой"/>
                        <Line X1="0" X2="300" VerticalAlignment="Center" StrokeThickness="2" Stroke="White"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE8CB;" />
                                <TextBlock Text="Восстановить"/>
                            </StackPanel>
                        </Button>
                        <Button>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE74D;" />
                                <TextBlock Text="Удалить"/>
                            </StackPanel>
                        </Button>
                        <Button>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE74D;" />
                                <TextBlock Text="Перезаписать"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <Button Content="Сохранения пользователей"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
