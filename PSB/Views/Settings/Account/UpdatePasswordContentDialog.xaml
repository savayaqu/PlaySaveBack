<ContentDialog
    x:Class="PSB.Views.Settings.Account.UpdatePasswordContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PSB.Views.Settings.Account"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Title="Обновление пароля" CornerRadius="10">
    <StackPanel Spacing="12">
        <Button BorderThickness="0" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-40,0,0" Click="Button_Click">
            <FontIcon HorizontalAlignment="Center" VerticalAlignment="Center" Glyph="&#xE711;" />
        </Button>
        <StackPanel Orientation="Horizontal" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Spacing="12">
            <Image Stretch="Fill" Height="50" Width="50" Source="{x:Bind UpdatePasswordViewModel.User.Avatar, Mode=TwoWay}"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{x:Bind UpdatePasswordViewModel.User.Nickname}"/>
                <TextBlock Text="{x:Bind UpdatePasswordViewModel.User.Login}"/>
            </StackPanel>
        </StackPanel>
        <HyperlinkButton x:Name="nav" Click="Nav_Click"  Content="Хотите обновить почту?"/>

        <!-- Текущий пароль -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <PasswordBox IsPasswordRevealButtonEnabled="False" Width="300" PlaceholderText="Текущий пароль" Password="{x:Bind UpdatePasswordViewModel.CurrentPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Tag="CurrentPasswordBox"/>
            <ToggleButton Tag="CurrentPasswordBox" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked">
                <FontIcon Glyph="&#xE7B3;" />
            </ToggleButton>
        </StackPanel>

        <!-- Новый пароль -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <PasswordBox IsPasswordRevealButtonEnabled="False" Width="300" PlaceholderText="Новый пароль" Password="{x:Bind UpdatePasswordViewModel.NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Tag="NewPasswordBox"/>
            <ToggleButton Tag="NewPasswordBox" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked">
                <FontIcon Glyph="&#xE7B3;" />
            </ToggleButton>
        </StackPanel>

        <TextBlock Text="Ваш пароль должен содержать не менее 6 символов"/>

        <!-- Подтверждение пароля -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <PasswordBox IsPasswordRevealButtonEnabled="False" Width="300" PlaceholderText="Подтвердите ваш пароль" Password="{x:Bind UpdatePasswordViewModel.NewPasswordConfirmation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Tag="ConfirmPasswordBox"/>
            <ToggleButton Tag="ConfirmPasswordBox" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked">
                <FontIcon Glyph="&#xE7B3;" />
            </ToggleButton>
        </StackPanel>
        <Button HorizontalAlignment="Center" Content="Обновить пароль" Command="{x:Bind UpdatePasswordViewModel.UpdatePasswordCommand, Mode=OneTime}"/>
    </StackPanel>
</ContentDialog>