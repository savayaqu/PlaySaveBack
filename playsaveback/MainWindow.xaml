<Window x:Class="playsaveback.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:playsaveback"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <!-- Для меню -->
            <ColumnDefinition Width="*" />
            <!-- Для содержимого -->
        </Grid.ColumnDefinitions>

        <!-- Панель навигации -->
        <StackPanel Background="LightGray">
            <Button Content="Home" Margin="10" Click="NavigateToHome" />
            <Button Content="Settings" Margin="10" Click="NavigateToSettings" />
        </StackPanel>

        <!-- Область содержимого -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated" />
        <Button x:Name="BackButton" Grid.Column="1" Content="Back" Margin="10" Click="NavigateBack" IsEnabled="False" Height="25" Width="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>

    </Grid>
</Window>
